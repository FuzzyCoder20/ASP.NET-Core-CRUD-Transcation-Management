        .gs {
            background-color: white;
            border: 2px solid black;
            color: green;
            padding: 5px 10px;
            text-align: center;
            display: inline-block;
            font-size: 20px;
            margin: 10px 30px;
            cursor: pointer;
            text-decoration: none;
            border-radius:5px;
        }

        .gc:hover {
            box-shadow: 1px 1px #000;
            background-color: #32CD32;
            
        }




        a:link,a:visited,a:link:active,a:visited:active {
            
            text-decoration: none;
            color:red;
        }

        .content {
            color: black;
           float:left;
            font-family: Garamond, serif;
            font-size: 50px;
            text-shadow: 1px 1px 1px #001;
            
        }

        .image{
            float:right;
            padding-bottom:90px;
            }
